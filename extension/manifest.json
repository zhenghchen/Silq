{
  "manifest_version": 3,
  "name": "Silq AI",
  "version": "1.0.0",
  "description": "AI-powered writing assistant with sidebar interface",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Silq AI"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
